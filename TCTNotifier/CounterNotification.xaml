<UserControl x:Class="TCTNotifier.CounterNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCTNotifier"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid x:Name="grid" Height="60" VerticalAlignment="Center" SnapsToDevicePixels="True" Background="#d1000000" HorizontalAlignment="Right" Width="60" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Ellipse x:Name="icon" Width="50" Height="50" Stroke="Gray" StrokeThickness="3" SnapsToDevicePixels="True" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid Width="21" Height="21" Margin="3" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Ellipse Fill="#FF007BCE"/>
            <TextBlock Name="amountTB" Foreground="#ffffffff" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextWrapping="NoWrap" FontSize="12" TextAlignment="Center">100</TextBlock>
        </Grid>


    </Grid>

</UserControl>
