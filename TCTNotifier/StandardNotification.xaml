<UserControl x:Class="TCTNotifier.StandardNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCTNotifier"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid x:Name="grid" Height="Auto" MinHeight="50" VerticalAlignment="Center" SnapsToDevicePixels="True" Background="#FF2E2E2E" HorizontalAlignment="Left" Width="200" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FF3E3D3D"/>
        <TextBlock Name="txt" Margin="5" Foreground="#70ffffff" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Notification text." TextWrapping="Wrap"/>
        <Border Name="border" BorderBrush="#ff909090" BorderThickness="0,0,0,2" Grid.ColumnSpan="2" Margin="0"/>
        <Ellipse x:Name="icon" Width="40" Height="40" Stroke="Transparent" StrokeThickness="0" >
        </Ellipse>
    </Grid>

</UserControl>
