                    <Rectangle.OpacityMask>
                        <ImageBrush ImageSource="resources/ic_assignment_black_24dp_2x.png" Stretch="Uniform"/>
                    </Rectangle.OpacityMask>
                </Rectangle>
                <TextBlock x:Name="overview_t" HorizontalAlignment="Left" Margin="7" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Foreground="#df000000" FontSize="15" FontWeight="DemiBold">Overview</TextBlock>

            </Grid>
            <Grid Tag="dungeons" Height="65" Cursor="Hand" MouseEnter="rowHighlight" MouseLeave="rowNormal" Background="#00000000" MouseLeftButtonDown="tabSelected" ClipToBounds="True">
