<UserControl x:Class="Tera.dgSelNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tera"
             mc:Ignorable="d" 
             d:DesignHeight="50"  MouseLeftButtonDown="addDungCount" Cursor="Hand" Height="50">

    <UserControl.CacheMode>
        <BitmapCache RenderAtScale="2"/>
    </UserControl.CacheMode>
    <Grid Height="50" Width="30" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Ellipse Opacity="100" HorizontalAlignment="Center" VerticalAlignment="Center" Width="22" Height="22" Fill="#15000000">

        </Ellipse>
        <TextBlock x:Name="t" FontSize="15" Text="1" FontWeight="DemiBold" TextAlignment="Center" VerticalAlignment="Center" Foreground="White" Opacity="1" Margin="0,0" Height="22" />

        <TextBlock x:Name="n" FontSize="12" Text="NAH"  TextAlignment="Center" VerticalAlignment="Stretch" Foreground="Gray" Opacity="1" Grid.Row="1"/>
    </Grid>
</UserControl>
