<UserControl x:Class="Tera.dgSel1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tera"
             mc:Ignorable="d" 
             d:DesignHeight="40"  MouseLeftButtonDown="addDungCount" Cursor="Hand" >
    <UserControl.Resources>
        <local:DgFillColorConverter x:Key="fillConv"/>
    </UserControl.Resources>
    <UserControl.CacheMode>
        <BitmapCache RenderAtScale="2"/>
    </UserControl.CacheMode>
    <Grid Height="40" Width="25" Margin="0,0,0,0">
        <Ellipse Height="21" Width="21" Opacity="100" Margin="0,0,0,0">
            <Ellipse.Fill>
                <SolidColorBrush Color="{Binding Text, Converter={StaticResource fillConv}, ConverterParameter=1, ElementName=t}"/>
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock x:Name="t" FontSize="15" Text="1" FontWeight="DemiBold" TextAlignment="Center" VerticalAlignment="Center" Foreground="White" Opacity="1" Margin="0"/>

    </Grid>
</UserControl>
