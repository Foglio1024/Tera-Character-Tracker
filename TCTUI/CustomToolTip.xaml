<UserControl x:Class="Tera.CustomToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tera"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Foreground="{x:Null}">
    <Grid Margin="10" >
        <!---Style="{StaticResource MaterialGrid}" -->
        <TextBlock Margin="2" x:Name="tooltipContent" FontSize="14" Foreground="#df000000" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"></TextBlock>
        <Border BorderThickness="1,1,1,1" BorderBrush="#ffd0d0d0"/>
    </Grid>
</UserControl>
